<div class="row">
  <div class="col-xs-12 col-lg-6">

    <div class="page-header">
      <h1>Sources <small>for <%= @project.name %></small></h1>
    </div>

    <div class="panel panel-default">
      <div class="panel-body">

        <%= link_to raw("Add #{Source.model_name.human} #{glyphicon :plus}"), new_project_source_path(@project), class: 'btn btn-default' %>

        <%= content_tag :button, raw("Import Sources #{glyphicon :import}"),
              class: 'btn btn-default',
              data: { toggle: 'modal', target: '#importModal' } %>

        <div class="btn-group" role="group" aria-label="...">
          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Export
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu">
            <li>
              <%= link_to 'View PDF', project_export_path(@project, :pdf, @search_params), target: '_blank' %>
            </li>
            <li>
              <%= link_to 'Download PDF', project_export_path(@project, :pdf, @search_params.merge(download: true)) %>
            </li>
            <li>
              <%= link_to 'Download BibTeX', project_export_path(@project, :bib, @search_params) %>
            </li>
          </ul>
        </div>

      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-body">

        <form action="<%= project_sources_url(@project, @search_params) %>" method="get">
          <div class="input-group">
          </div>
          <div class="input-group">
            <input type="text" name="q" class="form-control" placeholder="Search for..." value="<%= h(params[:q]) %>">
            <span class="input-group-btn">
              <button class="btn btn-default" type="button"><%= glyphicon :search %></button>
            </span>
          </div>
        </form>

        <div class="row">
          <div class="col-xs-12 col-sm-6 text-center">

              <div class="row">
                <div class="btn-group mbs mtm" role="group" aria-label="sort">
                  <% [:time, :stars, :rating].each do |sort| %>
                    <%= link_to t(sort, scope: 'search_options.sort'),
                          project_sources_path(@project, @search_params.merge(s: sort)),
                          class: "btn btn-xs btn-#{@search_params[:s].try(:to_sym) == sort ? 'primary' : 'default'}"
                          %>
                  <% end %>
                </div>
              </div>

              <div class="row">
                <div class="btn-group mts mbs" role="group" aria-label="sort">
                  <% [:none, :my_stars, :my_reviews, :unrated].each do |filt| %>
                    <%= link_to t(filt, scope: 'search_options.filter'),
                          project_sources_path(@project, @search_params.merge(f: filt)),
                          class: "btn btn-xs btn-#{@search_params[:f].try(:to_sym) == filt ? 'primary' : 'default'}"
                          %>
                  <% end %>
                </div>
              </div>

              <div class="row">
                <div class="btn-group mts" role="group" aria-label="sort">
                  <% [:table, :list, :grid].each do |view| %>
                    <%= link_to t(view, scope: 'search_options.view'),
                          project_sources_path(@project, @search_params.merge(v: view)),
                          class: "btn btn-xs btn-#{@search_params[:v].try(:to_sym) == view ? 'primary' : 'default'}"
                          %>
                  <% end %>
                </div>
              </div>

          </div>

          <div class="col-xs-12 col-sm-6 ptl">
            <form action="<%= project_sources_url(@project) %>" method="get">
              <% @search_params.each do |param, value| %>
                <%= hidden_field_tag param, value %>
              <% end %>
              <%= collection_select :t, nil, @tags, :id, :name, { prompt: 'Tag', selected: @search_params[:t] }, { class: 'selectize submit', name: 't' } %>
            </form>
          </div>
        </div>
      </div>
    </div>

  </div>


  <div class="col-xs-12 col-lg-6">
    <h3>D R O P &nbsp; I T &nbsp; L I K E &nbsp; I T ' S &nbsp; H O T &nbsp; <%= glyphicon :fire %></h3>

    <div class="panel panel-default">
      <div class="panel-body">
        <%= bootstrap_form_for :source_drop, url: project_source_drops_path(@project), method: :post,
        html: { class: '', id: 'new-source-drop' } do |f| %>

          <div class="row">
            <div class="col-xs-12 col-lg-6">
                  <%= f.text_area :bibtex_text, rows: 7, label: 'BibTeX',
                  placeholder: <<-BIBTEX
@book{programming_ruby,
  author = {Thomas, Dave and Fowler, Chad and Hunt, Andy},
  publisher = {The Pragmatic Bookshelf},
  title = {Programming Ruby 1.9: The Pragmatic Programmer's Guide},
  year = {2009}
}
BIBTEX
                  %>
                  <%= f.text_area :reference_text, rows: 3, label: 'Or reference',
                  placeholder: <<-REFERENCE
Thomas, D., Fowler, C., & Hunt, A. (2009). Programming Ruby 1.9: The Pragmatic Programmer's Guide. The Pragmatic Bookshelf.
REFERENCE
                  %>
                  <%= f.text_field :title, label: 'Or just the title', placeholder: 'Some Publication Title' %>
            </div>
            <div class="col-xs-12 col-lg-6 attachment-area mbm ptm">
              <div class="attachment-area__paperclip"></div>
              <%= f.label :document, 'Document (PDF)' %>
              <div class="dropzone dropzone-previews mbm" id="preview">
                <div class="dz-message" data-dz-message>
                  <span>Drop a PDF file here or click to select one</span>
                </div>
              </div>
              <%= f.text_field :document_url, label: 'Or Document URL', placeholder: 'https://host/some/document.pdf' %>
            </div>
            <div class="col-xs-12 col-lg-6 text-center">
              <%= button_tag class: 'btn btn-primary btn-warning btn-lg mtx', role: :submit do %>
              <strong>
                D R O P <%= glyphicon :save %>
              </strong>
              <% end %>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12 col-lg-6">
            </div>
            <div class="col-xs-12 col-lg-6">
            </div>
            <div class="col-xs-12 col-lg-12">

            </div>
          </div>
          <% end %>

      </div>
    </div>
  </div>
</div>

<%= render "sources/index/#{@search_params[:v]}" %>

<%= render 'sources/index/import_form' %>
