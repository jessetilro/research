<div class="row">
  <div class="col-xs-12">

    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">Original Document</h4>
      </div>
      <div class="panel-body">
        <% if @source.document.attached? %>
          <object data="<%= url_for(format: :pdf) %>" type="application/pdf" width="100%" height="500">
            alt : <a href="<%= url_for(format: :pdf) %>"><%= @source.document.filename %></a>
          </object>
        <% else %>
          <%= bootstrap_form_for @source, url: project_source_path(@project, @source),
              html: { class: '', id: 'update-source-drop' } do |f| %>
            <div class="dropzone dropzone-previews" id="preview">
              <div class="dz-message" data-dz-message>
                <span>Drop a PDF file here or click to select one</span>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>

  </div>
</div>
